{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form, {'attr': {'id': 'mock_form'}}) }}
    {{ form_row(form.method) }}
    {{ form_row(form.responseStatus) }}

    {#    {{ form_widget(form.headers.vars.prototype.children.key) }}
        {{ form_widget(form.headers.vars.prototype.children.value) }}#}
    <ul class="headers" data-prototype="{{ form_widget(form.headers.vars.prototype)|e }}">
        {% for header in form.headers %}
            {{ form_widget(header.headerKey, {'label': false }) }}
            {{ form_widget(header.headerValue, {'label': false }) }}
        {% endfor %}
    </ul>

    {{ form_row(form.body) }}
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}

    <input type="button" id="submit_form_button" value="Generate" class="btn-default btn">
{% endblock %}